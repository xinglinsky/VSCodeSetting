{
    "redhat.telemetry.enabled": true,
    "files.autoSave": "onFocusChange",
    "cmake.pinnedCommands": [
        "workbench.action.tasks.configureTaskRunner",
        "workbench.action.tasks.runTask"
    ],
    "cmake.showConfigureWithDebuggerNotification": false,

    "explorer.confirmDragAndDrop": false,
    "explorer.fileNesting.patterns": {
        "*.ts": "${capture}.js",
        "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
        "*.jsx": "${capture}.js",
        "*.tsx": "${capture}.ts",
        "tsconfig.json": "tsconfig.*.json",
        "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
        "*.sqlite": "${capture}.${extname}-*",
        "*.db": "${capture}.${extname}-*",
        "*.sqlite3": "${capture}.${extname}-*",
        "*.db3": "${capture}.${extname}-*",
        "*.sdb": "${capture}.${extname}-*",
        "*.s3db": "${capture}.${extname}-*"
    },
    "clangd.path": "/Users/yuanlong.hu/Library/Application Support/Windsurf/User/globalStorage/llvm-vs-code-extensions.vscode-clangd/install/19.1.2/clangd_19.1.2/bin/clangd",
    "clangd.enableCodeCompletion": false,
    "clangd.inactiveRegions.useBackgroundHighlight": true,

    "git.rebaseWhenSync": true,
    "git.terminalGitEditor": true,
    "git.autofetch": true,
    "git.fetchOnPull": true,
    "git.pruneOnFetch": true,

    "vim.camelCaseMotion.enable": true,
    "vim.easymotion": true,
    "vim.sneak": true,
    "vim.targets.enable": true,
    "vim.useCtrlKeys": false,
    "vim.leader": "<space>",
    "vim.sneakReplacesF": true,
    "vim.smartRelativeLine": true,
    "vim.sneakUseIgnorecaseAndSmartcase": true,
    "vim.autoSwitchInputMethod.enable": true,
    "vim.highlightedyank.enable": true,
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {
          "before": ["j", "j"],
          "after": ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindings": [
        {
            "before": ["g", "m"],
            "commands": [
                "workbench.action.gotoSymbol"
            ]
        },
        {
            "before": ["g", "o"],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        {
            "before": ["g", "h"],
            "commands": [
                "clangd.switchheadersource"
            ]
        },
        {
            "before": ["<leader>", "w"],
            "commands": [
                "workbench.action.files.save"
            ]
        },
        {
            "before": ["<leader>", "q"],
            "commands": [
                "workbench.action.closeActiveEditor"
            ]
        },
        {
            "before": ["<leader>", "m"],
            "commands": [
                "bookmarks.toggle"
            ]
        },
        {
            "before": ["<leader>", "b"],
            "commands": [
                "bookmarks.list"
            ]
        },
        {
            "before": ["<leader>", "w", "t"],
            "commands": [
                "workbench.action.terminal.toggleTerminal"
            ]
        },
        {
            "before": ["<leader>", "w", "o"],
            "commands": [
                "workbench.action.output.toggleOutput"
            ]
        },
        {
            "before": ["<leader>", "w", "p"],
            "commands": [
                "workbench.actions.view.problems"
            ]
        }
    ],
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    "syncSettings.resources": [
        "extensions",
        "keybindings",
        "settings",
        "snippets",
        "uiState"
    ],
    "syncSettings.keybindingsPerPlatform": true
}